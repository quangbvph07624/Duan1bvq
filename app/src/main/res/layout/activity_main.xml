<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:layout_marginLeft="5dp"
    tools:context=".MainActivity">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="20dp">
    <Button
        android:layout_width="150dp"
        android:layout_height="70dp"
        android:text="Ôn Tập"
        android:onClick="openontep"
        android:textAllCaps="false"
        android:textColor="#ffffff"
        android:background="@drawable/custom_button"

        />
    <Button
        android:onClick="opentracnghiem"
        android:layout_width="150dp"
        android:layout_height="70dp"
        android:text="Thi Trắc Nghiệm"
        android:layout_marginLeft="20dp"
        android:textAllCaps="false"
        android:textColor="#ffffff"
        android:background="@drawable/custom_button2"

        />
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:onClick="openbienbao"
            android:layout_width="150dp"
            android:layout_height="70dp"
            android:text="Các Biển Báo"
            android:textAllCaps="false"
            android:textColor="#ffffff"
            android:background="@drawable/custom_button3"

            />
        <Button
            android:layout_width="150dp"
            android:layout_height="70dp"
            android:text="Mẹo Ghi Nhớ"
            android:layout_marginLeft="20dp"
            android:textAllCaps="false"
            android:textColor="#ffffff"
            android:background="@drawable/custom_button4"
            android:onClick="ghinho"

            />

    </LinearLayout>

</LinearLayout>